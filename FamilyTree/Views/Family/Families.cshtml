@model IEnumerable<FamilyTree.Data.Family>

@{
    ViewBag.Title = "Families";
}

<h2>Families</h2>

<p>
    @Html.ActionLink("Create New Family", "AddFamilyName",new { ownerUserName = ViewBag.ownerUserName, controller = "FamilyAdmin"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ownerUserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.familyName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ownerUserName)
        </td>
        <td>
            @Html.ActionLink(item.familyName, "GetIndividuals", new { fid = item.familyID, controller = "Family" })
        </td>
        <td>
            @Html.ActionLink("Edit Family Name", "EditFamilyName", new { fid = item.familyID, controller = "FamilyAdmin" }) |
            @Html.ActionLink("Delete", "DeleteFamilyName", new { fid = item.familyID , controller = "Family" })
        </td>
    </tr>
}

</table>
